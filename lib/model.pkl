# train_model.py
from sklearn.tree import DecisionTreeClassifier
import pandas as pd
import joblib

# Sample dataset (replace with real user data)
data = {
    'steps': [5000, 10000, 8000, 12000],
    'calories_burned': [200, 400, 300, 500],
    'workout_duration': [30, 60, 45, 90],
    'recommendation': ['light', 'intense', 'moderate', 'intense']
}

df = pd.DataFrame(data)

# Train a decision tree model
X = df[['steps', 'calories_burned', 'workout_duration']]
y = df['recommendation']

model = DecisionTreeClassifier()
model.fit(X, y)

# Save the model
joblib.dump(model, 'model.pkl')